public class MyDate {
    private int year;
    private int month;
    private int day;

    public MyDate(int year, int month, int day) {
        this.year=year;
        this.month=month;
        this.day=day;
    }

    public void addDays(int days) {
        int[] dayinmonth = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
        for (int i = 0; i < days; i++) {
            if (year % 4 == 0 && year % 100 != 0 || year % 400 == 0) {
                dayinmonth[1] = 29;
            } else {
                dayinmonth[1] = 28;
            }

            day++;
            if (day > dayinmonth[month - 1]) {
                day = 1;
               month++;
            }
            if (month > 12) {
                month = 1;
                year++;
            }
        }
    }


    public String toString() {
        String a = year + "-" + month + "-" + day;
        return a;
    }

    public static int difference(MyDate date1, MyDate date2) {
        int sum = 0;
        int[] dayinmonth = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
        if (date1.year < date2.year || date1.year == date2.year && date1.month > date2.month || date1.year == date2.year && date1.month == date2.month && date1.day > date2.day) {
            while (date1.year != date2.year || date1.month != date2.month || date1.day != date2.day) {
                if (date1.year % 4 == 0 && date1.year % 100 != 0 || date1.year % 400 == 0) {
                    dayinmonth[1] = 29;
                }

                date1.day++;
                sum--;
                if (date1.day > dayinmonth[date1.month - 1]) {
                    date1.day = 1;
                    date1.month++;
                }
                if (date1.year > 12) {
                    date1.year++;
                    date1.month = 1;
                }
            }
        } else {
            while (date1.year != date2.year || date1.month != date2.month || date1.day != date2.day) {
                if (date2.year % 4 == 0 && date2.year % 100 != 0 || date2.year % 400 == 0) {
                    dayinmonth[1] = 29;
                }

                date2.day++;
                sum++;
                if (date2.day > dayinmonth[date1.month - 1]) {
                    date2.day = 1;
                    date2.month++;
                }
                if (date2.year > 12) {
                    date2.year++;
                    date2.month = 1;
                }
            }
        }
        return sum;
    }
    public int compare(MyDate date3){
        if(this.year>date3.year){return 1;}
        else if (this.year==date3.year&&this.month>date3.month) {
            return 1;
        }
        else if (this.year== date3.year&&this.month== date3.month&&this.day>date3.day){
            return 1;
        } else if (this.year== date3.year&&this.month== date3.month&&this.day==date3.day) {
            return -1;
        }
        else{
            return 0;
        }
    }
}
